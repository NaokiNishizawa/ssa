<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/register_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorLightBlue"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/do_input_plan"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- 開始時間 -->
        <TextView
            android:id="@+id/start_time_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/text_normal_size"
            android:text="00:00"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/text_normal_size"
            android:text="〜"/>

        <!-- 終了時間 -->
        <TextView
            android:id="@+id/end_time_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/text_normal_size"
            android:text="00:00"/>

    </LinearLayout>

    <!-- アラート or タイマー -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/skt_arerlt"
            android:button="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_normal_size"
            android:textColor="@color/colorBlack"
            android:text="OR"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/skt_timer"
            android:button="@null"/>
    </RadioGroup>

    <CheckedTextView
        android:id="@+id/before_notification_check"
        android:text="@string/before_notification"
        android:textSize="@dimen/text_normal_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:checkMark="@mipmap/check"/>

    <!-- TODO 正しく作ること -->
    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="登録する"/>

</LinearLayout>